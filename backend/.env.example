# =======================================
# MYTRAVER BACKEND ENVIRONMENT VARIABLES
# =======================================

# Application Settings
NODE_ENV=development
PORT=8080
APP_NAME=MyTraveler
APP_VERSION=1.0.0

# =======================================
# FLIGHT API CONFIGURATION (AviationStack)
# =======================================
AVIATIONSTACK_API_KEY=3db8755aa61b80e79168c3374801b21a
AVIATIONSTACK_BASE_URL=http://api.aviationstack.com/v1
FLIGHT_API_TIMEOUT=10000
FLIGHT_CACHE_TTL=300

# =======================================
# DATABASE CONFIGURATION
# =======================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mytraveler
DB_USER=postgres
DB_PASSWORD=your_postgres_password
DB_SSL_MODE=prefer
DB_MAX_CONNECTIONS=20

# =======================================
# REDIS CONFIGURATION
# =======================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# =======================================
# JWT CONFIGURATION
# =======================================
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# =======================================
# PAYMOB PAYMENT INTEGRATION
# =======================================
PAYMOB_API_KEY=your_paymob_api_key
PAYMOB_INTEGRATION_ID=your_integration_id
PAYMOB_HMAC_KEY=your_hmac_key
PAYMOB_IFRAME_ID=your_iframe_id

# =======================================
# EMAIL CONFIGURATION
# =======================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=MyTraveler <noreply@mytraveler.com>

# =======================================
# FILE UPLOAD CONFIGURATION
# =======================================
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf
UPLOAD_PATH=/app/uploads

# =======================================
# CORS CONFIGURATION
# =======================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# =======================================
# RATE LIMITING CONFIGURATION
# =======================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =======================================
# LOGGING CONFIGURATION
# =======================================
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# =======================================
# SECURITY CONFIGURATION
# =======================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here
COOKIE_SECRET=your_cookie_secret_here

# =======================================
# MONITORING CONFIGURATION
# =======================================
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# =======================================
# EXTERNAL API CONFIGURATION
# =======================================
EXTERNAL_API_TIMEOUT=15000
EXTERNAL_API_RETRIES=3

# =======================================
# DEVELOPMENT SETTINGS
# =======================================
DEBUG=mytraveler:*
ENABLE_SWAGER=true
ENABLE_GRAPHQL_PLAYGROUND=true

# =======================================
# PRODUCTION SETTINGS
# =======================================
TRUST_PROXY=true
DISABLE_LOGGING_REQUEST_BODY=false

# =======================================
# AWS CONFIGURATION (for deployment)
# =======================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET=your_s3_bucket_name
S3_REGION=us-east-1

# =======================================
# FRONTEND CONFIGURATION
# =======================================
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_PAYMOB_IFRAME=https://accept.paymob.com/api/acceptance/iframes/your_iframe_id